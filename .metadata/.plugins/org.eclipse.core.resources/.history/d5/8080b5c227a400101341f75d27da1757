package com.project.mapper;

import com.project.dto.OrganizationDTO;
import com.project.entity.Organization;
import java.util.stream.Collectors;

public class OrganizationMapper {

    public static OrganizationDTO toDTO(Organization organization) {
        if (organization == null) return null;

        return OrganizationDTO.builder()
                .id(organization.getId())
                .organizationName(organization.getOrganizationName())
                .email(organization.getEmail())
                .contactNumber(organization.getContactNumber())
                .address(organization.getAddress())
                .registrationNumber(organization.getRegistrationNumber())
                .documentUrl(organization.getDocumentUrl())
                .verificationStatus(organization.getVerificationStatus().name())
                .bankId(organization.getBank() != null ? organization.getBank().getId() : null)
                .employeeIds(
                        organization.getEmployees() != null
                                ? organization.getEmployees().stream()
                                    .map(e -> e.getId())
                                    .collect(Collectors.toList())
                                : null
                )
                .build();
    }

    public static Organization toEntity(OrganizationDTO dto) {
        if (dto == null) return null;

        return Organization.builder()
                .id(dto.getId())
                .organizationName(dto.getOrganizationName())
                .email(dto.getEmail())
                .contactNumber(dto.getContactNumber())
                .address(dto.getAddress())
                .registrationNumber(dto.getRegistrationNumber())
                .documentUrl(dto.getDocumentUrl())
                .build();
    }
}
